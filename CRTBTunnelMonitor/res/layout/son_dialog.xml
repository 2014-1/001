<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="horizontal" >

    <RelativeLayout 
        android:id="@+id/cr1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_weight="1">
        <ImageView 
            android:id="@+id/image_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/connect_new"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_new"
            android:textSize="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="新建"/>
    </RelativeLayout  >
    
    <RelativeLayout 
        android:id="@+id/cr2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_weight="1">
        <ImageView 
            android:id="@+id/image_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/connect_edit"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_edit"
            android:textSize="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="编辑"/>
    </RelativeLayout >
    
    <RelativeLayout 
        android:id="@+id/cr3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_weight="1">
        <ImageView 
            android:id="@+id/image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_delete"
            android:textSize="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="删除"/>
    </RelativeLayout >
    

</LinearLayout>