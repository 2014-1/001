<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:id="@+id/warning_title"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:background="#006d87"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/rizhi"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="Medium Text"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>

        <TextView
                android:layout_weight="1"
                android:id="@+id/yixiaojing"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="Medium Text"
                android:gravity="center"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rela"
            android:layout_below="@+id/warning_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ListView
                android:background="@color/white"
                android:id="@+id/listView12"
                android:divider="@color/black"
                android:dividerHeight="1px"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </ListView>

    </LinearLayout>

    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/warning_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true">

        <Button
                android:id="@+id/complete_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="已消警"
                android:textColor="@color/white"
                />
        <View
                android:id="@+id/line"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/complete_btn"
                android:layout_above="@+id/complete_btn"
                android:layout_width="120dp"
                android:layout_height="1dp"/>
        <Button
                android:id="@+id/deal_with_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="正在处理"
                android:textColor="@color/white"
                android:layout_alignLeft="@+id/complete_btn"
                android:layout_above="@+id/complete_btn"
                />
    </RelativeLayout>

    <include layout="@layout/warning_complete"/>

</RelativeLayout>