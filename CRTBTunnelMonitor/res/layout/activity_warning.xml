<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:id="@+id/warning_title"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:background="#006d87"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/rizhi"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="Medium Text"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>

        <TextView
                android:layout_weight="1"
                android:id="@+id/yixiaojing"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="Medium Text"
                android:gravity="center"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rela"
            android:layout_below="@+id/warning_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ListView
                android:background="@color/white"
                android:id="@+id/listView12"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </ListView>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/warning_bottom"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yujingbackgroud">


        <Button
                android:id="@+id/deal_with_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/chuli"
                />
        <Button
                android:id="@+id/complete_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/xiaojing"
                />
    </LinearLayout>

    <include layout="@layout/warning_complete"/>

</RelativeLayout>