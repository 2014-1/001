<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_topbar_layout" />

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/register_icon"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="软件注册"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/update"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="软件升级"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/userbook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/userbook"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="用户手册"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/software_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/softwareinfo"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="软件说明"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/userinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/userinfo"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="用户信息"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

</LinearLayout>