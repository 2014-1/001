<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical"
            android:paddingBottom="30dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/work_plan_label"
                    android:layout_width="80dp"
                    android:text="工作面名称" />

                <EditText
                    android:id="@+id/ed_work_new_name"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="190dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/work_plan_label"
                    android:layout_width="80dp"
                    android:text="建立时间" />

                <EditText
                    android:id="@+id/ed_work_new_calendar"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="190dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:text="2014-04-12 00:00:00" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/work_plan_label"
                    android:layout_width="80dp"
                    android:text="施工单位" />

                <EditText
                    android:id="@+id/ed_work_new_unit"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="190dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/work_plan_label"
                    android:layout_width="80dp"
                    android:text="里程前缀" />

                <EditText
                    android:id="@+id/ed_work_new_prefix"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="190dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:maxLength="5"
                    android:text="DK" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/work_plan_label"
                    android:layout_width="80dp"
                    android:text="起始里程" />

                <EditText
                    android:id="@+id/ed_work_new_start"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="190dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:inputType="numberDecimal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/work_plan_label"
                    android:layout_width="80dp"
                    android:text="终止里程" />

                <EditText
                    android:id="@+id/ed_work_new_end"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="190dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:inputType="numberDecimal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>