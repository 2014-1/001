<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical" 
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="工作面 "
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/work_new_et_name"
                    android:layout_width="180dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="25dp"
                    android:ellipsize="end"
                    android:inputType="textPersonName"
                    android:maxLength="20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="建立时间"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/work_new_et_calendar"
                    android:layout_width="140dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@raw/calendar" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="施工单位"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/work_new_et_unit"
                    android:layout_width="180dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="里程前缀"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/work_new_et_prefix"
                    android:layout_width="180dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:text="DK" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="起始里程"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/work_new_et_start"
                    android:layout_width="180dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:inputType="number" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="终止里程"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/work_new_et_end"
                    android:layout_width="180dp"
                    android:layout_height="42dip"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:inputType="number" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/x" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>