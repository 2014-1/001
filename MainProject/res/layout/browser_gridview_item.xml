<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gridview_selector"
    android:padding="1dp" >

    <ImageView
        android:id="@+id/iv_grid_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingTop="7dp"
        android:paddingBottom="16dp"
        android:paddingLeft="22dp"
        android:paddingRight="30dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/video_file"
        android:background="@drawable/video_grid_bg"/>
    
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/video_time_bg"
        android:layout_alignBottom="@id/iv_grid_thumbnail"
        android:layout_alignRight="@id/iv_grid_thumbnail"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="16dp"
        android:singleLine="true"
        android:text="01:30:45"
        android:textSize="13sp" 
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_grid_thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:text="诸神之战"
        android:textSize="16sp" 
        android:textColor="@android:color/white"/>
    
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_grid_thumbnail"
        android:layout_marginTop="-10dp"
        android:gravity="center"
        android:paddingRight="13dp"
        android:visibility="gone"
        android:button="@drawable/checkbox" />
</RelativeLayout>

