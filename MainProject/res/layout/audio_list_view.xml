<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_audio_Local"
            style="@style/browser_footer_tab"
            android:drawableLeft="@drawable/icon_tab_audio"
            android:text="@string/btn_text_local" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line_vertical" />

        <TextView
            android:id="@+id/btn_audio_sdcard"
            style="@style/browser_footer_tab"
            android:drawableLeft="@drawable/icon_tab_sdcard"
            android:text="@string/btn_text_sdcard" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line_vertical" />

        <TextView
            android:id="@+id/btn_audio_usb"
            style="@style/browser_footer_tab"
            android:drawableLeft="@drawable/icon_tab_usb"
            android:text="@string/btn_text_usb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line_vertical" />

        <TextView
            android:id="@+id/btn_audio_aux"
            style="@style/browser_footer_tab"
            android:drawableLeft="@drawable/icon_tab_aux"
            android:text="@string/btn_text_aux" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line_vertical" />

        <TextView
            android:id="@+id/btn_audio_mobile"
            style="@style/browser_footer_tab"
            android:drawableLeft="@drawable/icon_tab_mobile"
            android:text="@string/btn_text_mobile" />
    </LinearLayout>

    <include
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        layout="@layout/header_audio_list" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_container"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:background="@android:color/background_dark" >


        <GridView
             android:id="@+id/audio_grid_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dip"
            android:visibility="visible"
            android:layout_margin="16dip"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:numColumns="3" >
        </GridView>

        <TextView
            android:id="@+id/audio_aux_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/aux_disconnected"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>