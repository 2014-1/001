<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/album_name"
            android:drawableLeft="@drawable/icon_album"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Best of Satriani"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/singer_name"
            android:drawableLeft="@drawable/icon_singer"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joe Satriani"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/music_name"
            android:drawableLeft="@drawable/icon_music"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="They Don&apos;t care About US"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textSize="25sp" />

</LinearLayout>