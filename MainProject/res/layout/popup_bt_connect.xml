<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingRight="15dp"
    android:paddingLeft="5dp"
    android:paddingBottom="15dp"
    android:background="@drawable/popup_background_bt_connect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_popup_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/enter_pin_code_prompt"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/btn_popup_lable_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/popup_btn_close" />

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center">
        <EditText
            android:id="@+id/et_popup_input" 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/popup_background_input"
		    android:gravity="center"
		    android:textColor="@color/white"
		    android:textSize="25sp" 
		    android:singleLine="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center"
        >
        <Button 
            android:id="@+id/btn_popup_commit"
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/popup_background_bt_connect"
            />
    </RelativeLayout>
	
</LinearLayout>
