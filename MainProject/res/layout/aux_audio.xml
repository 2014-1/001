<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <View
        android:id="@+id/aux_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bar_top" >
    </View>

    <View
        android:id="@+id/aux_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bar_top" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/aux_bottom_bar"
        android:layout_below="@id/aux_top_bar"
        android:gravity="center" >

        <TextView
            android:id="@+id/aux_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aux_connected"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>