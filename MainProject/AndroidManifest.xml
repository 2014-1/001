<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byd.player"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/byd_company"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.byd.player.BrowserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.byd.player.video.VideoPlayActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.byd.player.audio.AudioListActivity"
            android:icon="@drawable/byd_company"
            android:label="@string/audio_page"
            android:theme="@android:style/Theme.DeviceDefault" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.byd.player.audio.AudioPlayerActivity"
            android:theme="@android:style/Theme.DeviceDefault" />
        <activity android:name="com.byd.player.AuxAudioPlayActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.byd.player.bluetooth.ConnectActivity"
            android:theme="@android:style/Theme.DeviceDefault" 
            android:screenOrientation="landscape" >
        </activity>

        <service android:name="com.byd.player.services.AuxAudioService" >
        </service>
        <service android:name="com.byd.player.audio.AudioPlayerService" />
    </application>
</manifest>